@model Models.ApplicationUser

@{
    ViewBag.Title = "Edit Role";
}

<h2>Edit Role</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @if (ViewBag.UserRole.Equals("User"))
        {
            <h4 style="color:dodgerblue">You can add Admin role to the current user</h4>
        }
        else
        {
            <h4 style="color:red">You cannot modify the role of an Admin user</h4>
        }
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserName)

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("User Role", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @ViewBag.UserRole
            </div>
        </div>

        @if (ViewBag.UserRole.Equals("User"))
        {
            <div class="form-group">
                @Html.Label("Change to Admin", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="checkbox" name="checkboxData" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-danger" />
                </div>
            </div>
        }
        @Html.ActionLink("Back To User List", "ListUsers")
    </div>
}